<%= stylesheet_link_tag    "login" %>

<div id="reg">
	
<h2>欢迎加入Pinterest!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "auth_mk"}) do |f| %>
  <%= devise_error_messages! %>
  <ul>
  	<li><%= f.label :邮箱 %><%= f.text_field :email %><span></span></li>
  	<li><%= f.label :密码 %><%= f.password_field :password %><span></span></li>
  	<li><%= f.label :确认密码 %><%= f.password_field :password_confirmation %><span></span></li>
  	<li><%= f.submit "注册" %></li>
  </ul>
<% end %>

    <ul class="auth_other">
        <li><strong>已经有帐号？</strong>
        	<%- if controller_name != 'sessions' %>
  	<%= link_to "直接登录", new_session_path(resource_name) %><br />
	<% end -%></li>
        <li><i class="icon_db"></i><a href="#">用豆瓣帐号登录</a></li>
        <li><i class="icon_qq"></i><a href="#">腾讯微博登录</a></li>
        <li><i class="icon_wb"></i><a href="#">新浪微博登录</a></li>
    </ul>

</div>
